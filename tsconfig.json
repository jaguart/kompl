{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src/main.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "types" ],
  "compilerOptions": {
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "target": "ESNext",
    "module": "ESNext",
    "importHelpers": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "baseUrl": ".",
      "paths": {
        "*": [ "*", "types/*" ]
      },
      "resolveJsonModule": true
    }
  }
}
