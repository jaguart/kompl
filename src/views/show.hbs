{{#> layout-page  page_title="Show Tests" page_heading="Kompl SHOW Tests" }}

<!-- show.hbs -->

<script>
  // for ESlint HTML plugin
  var $kompl, $

  let $show = {
    title: 'Jeffs SHOW Compilation',
    slugs: [
      '/kompl/show.html',
      {{> partial-kompl-slugs }}
    ],
    style: 'zam',
    size: 'large',
    placer: true,
    closer: true,
  }

  function show_in( $id   ) { $kompl.play({ ...$show, title: $show.title + ': ' + $id,   options: { show: $id,    }}) }
  function show_at( $pcnt ) { $kompl.play({ ...$show, title: $show.title + ': ' + $pcnt, options: { show: $pcnt,  }}) }

  // visual clue that above has compiled :)
  // Does not depend on jQuery - maybe it should
  document.addEventListener('DOMContentLoaded', function (ev) {
    $('#greeting').text('Tadah: '+Date.now()).addClass('red')
  })

</script>

{{#table-piped th_rows=0 caption="Kompilation SHOW testing..." }}

| {{#button}} Reset           => $kompl.reset()       {{/button}} | Reset all Kompl storage               |
| {{#button}} Clear           => $kompl.clear()       {{/button}} | Clear compilation currently in-play   |
| {{#button}} Play - HERE1    => show_in('#here1')    {{/button}} | Widget in #here1                      |
| {{#button}} Play - HERE2    => show_in('#Here2')    {{/button}} | Widget in #Here2 ?? note case!        |
| {{#button}} Play - Bad Id   => show_in('#unknown')  {{/button}} | Widget in #id that doesn't exist      |
| {{#button}} Play - Bad Arg  => show_in('apples')    {{/button}} | Widget in invalid-arg                 |

| {{#button}} Play - 10%      => show_at(10)          {{/button}} | Widget at 10%                         |
| {{#button}} Play - 50%      => show_at(50)          {{/button}} | Widget at 50%                         |
| {{#button}} Play - 90%      => show_at(90)          {{/button}} | Widget at 90%                         |
| {{#button}} Play - 100%     => show_at(100)         {{/button}} | Widget at 100%                        |
| {{#button}} Play - 0.50     => show_at(0.50)        {{/button}} | Widget at 0.50                        |
| {{#button}} Play - 1.00     => show_at(1)           {{/button}} | Widget at 1.00                        |

{{/table-piped }}

{{> partial-heredivs }}

