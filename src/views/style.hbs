{{#> layout-page  page_title="Style Tests" page_heading="Kompl STYLE Tests" }}

<!-- style.hbs -->

<script>
  // for ESlint HTML plugin
  var $kompl, $

  let $compilation = {
    title: 'Jeffs Style Compilation',
    slugs: [
      '/kompl/style.html',
      {{> partial-kompl-slugs }}
    ],
  }

  function play_style( $style ) { $kompl.play({ ...$compilation, style: $style, title: $compilation.title + ' - ' + $style }) }

  function small  ()      { $kompl.size('small')   }
  function medium ()      { $kompl.size('medium')  }
  function large  ()      { $kompl.size('large')   }

  // visual clue that above has compiled :)
  // Does not depend on jQuery - maybe it should
  document.addEventListener('DOMContentLoaded', function (ev) {
    $('#greeting').text('Tadah: '+Date.now()).addClass('blue')
  })

</script>

{{#table-piped th_rows=0 caption="Kompilation STYLE testing..." }}

| {{#button}} Reset           => $kompl.reset()         {{/button}} | Reset all Kompl storage               |
| {{#button}} Clear           => $kompl.clear()         {{/button}} | Clear compilation currently in-play   |

| {{#button}} Play Rich       => play_style('Rich')     {{/button}} | Rich - all user controls   |
| {{#button}} Play Choice     => play_style('Choice')   {{/button}} | Choice - all user controls, except placer   |
| {{#button}} Play Clean      => play_style('Clean')    {{/button}} | Clean - no placer, sizer or closer - you still get Homer   |
| {{#button}} Play Naked      => play_style('Naked')    {{/button}} | Naked - no user controls   |

| {{#button}} Play ZAM        =>  play_style('ZAM')     {{/button}} | ZAM - Malcolm's defaults   |
| {{#button}} Play Unknown    =>  play_style('Unknown') {{/button}} | Unknown - a style that doesnt exist  |


