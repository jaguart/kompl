{{#> layout-page  page_title="Main Tests" page_heading="Kompl MAIN Tests" }}

<script>
  // for ESlint HTML plugin
  var $kompl, $

  let $compilation = {
    title: 'Jeffs Main Test Compilation',
    slugs: [
      '/kompl/index.html',
      '/t1/index.php/p1',
      '/t1/index.php/p2',
      '/t1/index.php/p3',
      '/kompl/index.html',
      '/kompl/show.html',
      '/kompl/style.html',
    ],
  }

  // no options - use those set elsewhere
  function play_whatever()    { $kompl.play({ ...$compilation, }) }
  function play_default()     { $kompl.play({ ...$compilation, options: { /* empty = all defaults */ } }) }
  function play_naked()       { $kompl.play({ ...$compilation, homer:  false, closer: false, sizer:  false, placer: false, }) }

  function play_nohomer()     { $kompl.play({ ...$compilation, homer:  false,  }) }
  function play_nosizer()     { $kompl.play({ ...$compilation, sizer:  false,  }) }
  function play_nocloser()    { $kompl.play({ ...$compilation, closer: false,  }) }
  function play_noplacer()    { $kompl.play({ ...$compilation, placer: false,  }) }
  function play_nobar()       { $kompl.play({ ...$compilation, sizer:  false, closer: false, }) }

  function tl()       { $kompl.place('tl') }
  function tc()       { $kompl.place('tc') }
  function tr()       { $kompl.place('tr') }
  function bl()       { $kompl.place('bl') }
  function bc()       { $kompl.place('bc') }
  function br()       { $kompl.place('br') }

  function small  ()  { $kompl.size('small')   }
  function medium ()  { $kompl.size('medium')  }
  function large  ()  { $kompl.size('large')   }

  function placer_on  () { $kompl.options({placer:true,})   }
  function placer_off () { $kompl.options({placer:false,})  }
  function closer_on  () { $kompl.options({closer:true,})   }
  function closer_off () { $kompl.options({closer:false,})  }
  function sizer_on   () { $kompl.options({sizer:true,})    }
  function sizer_off  () { $kompl.options({sizer:false,})   }
  function homer_on   () { $kompl.options({homer:true,})    }
  function homer_off  () { $kompl.options({homer:false,})   }

  // visual clue that above has compiled :)
  // Does not depend on jQuery - maybe it should
  document.addEventListener('DOMContentLoaded', function (ev) {
    $('#greeting').text('Tadah: '+Date.now()).addClass('green')
  })

</script>

